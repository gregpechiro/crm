<!DOCTYPE html>
<html lang="en">
    <head>

        {{ template "head.tmpl" . }}

        <!--Morris Chart CSS -->
        <link rel="stylesheet" href="/static/morris/morris.css">
        <!-- DataTables -->
        <link href="/static/datatables/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
        <link rel="stylesheet" href="/static/datatables/custom.css" charset="utf-8">
        <title>All Customers</title>

    </head>

    <body>

        {{ template "side-nav.tmpl" . }}

        <!--Main Content Start -->
        <section class="content">

            {{ template "nav.tmpl" . }}


            <div class="wraper container-fluid">
                <div class="row">
                    <div class="col-lg-6">

                        <p class="lead clearfix">
                            Customers

                        </p>
                    </div>
                    <div class="col-lg-6">
                        <span class="pull-right">
                            <a href="/cns/company/new">Add <i class="fa fa-plus"></i></a>
                        </span>
                        {{ if eq .session.ROLE "ADMIN" "DEVELOPER" }}
                            <span class="pull-right">
                                <a class="btn btn-xs btn-primary" id="export">Export</a>
                                &nbsp;&nbsp;&nbsp;&nbsp;
                            </span>



                            <!-- <form class="pull-right" action="/cns/company/all/export" method="post">
                                <button class="btn btn-xs btn-primary">Export</button>
                            </form> -->
                        {{ end }}

                    </div>
                    <div class="col-lg-12">
                        <table id="companies" class="table table-bordered table-hover" width="100%" style="width: 100%;background-color:white;">
                            <thead>
                                <tr id="search">
                                    <th>name</th>
                                    <th>contact</th>
                                    <th>phone</th>
                                    <th>email</th>
                                    <th>dot</th>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>DOT#</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{ range $company := .companies }}
                                    <tr id="{{ $company.Id }}" class="clickable" data-url="/cns/company/{{ $company.Id }}">
                                        <td>{{ $company.Name }}</td>
                                        <td>{{ $company.ContactName }}</td>
                                        <td>{{ $company.ContactPhone }}</td>
                                        <td>{{ $company.Email }}</td>
                                        <td>{{ $company.DOTNum }}</td>
                                    </tr>
                                {{ end }}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {{ template "footer.tmpl" . }}

        </section>

        {{ template "scripts.tmpl" . }}

        <script src="/static/datatables/jquery.dataTables.min.js"></script>
        <script src="/static/datatables/dataTables.bootstrap.js"></script>
        <script src="/static/datatables/custom.js" charset="utf-8"></script>

        {{ template "session.tmpl" . }}

        <script type="text/javascript">

                var table = $('#companies').DataTable({
                    "lengthMenu":[10,15,20],
                    "pageLength": 20,
                    "columnDefs": [
                        { "orderable": false, "targets": [3] },
                        { "name": "name",     "targets": 0 },
                        { "name": "contact",  "targets": 1 },
                        { "name": "phone",    "targets": 2 },
                        { "name": "email",    "targets": 3 },
                        { "name": "dot",      "targets": 4 }
                    ]
                });

                $('a#export').click(function() {

                    $.ajax({
                        method:'POST',
                        url: '/cns/company/all/export',
                        success: function(resp) {
                            if (resp.error) {
                                setFlashMsg('alertError', resp.msg);
                                window.location.href = '/cns/company';
                                return
                            }
                            window.location.href = resp.path;
                        },
                        error: function(e, d) {
                            console.log(e);
                            console.log(d);
                            setFlashMsg('alertError', 'Error exporting companies');
                            window.location.href = '/cns/company';
                        }
                    });
                });

        </script>

    </body>
</html>
